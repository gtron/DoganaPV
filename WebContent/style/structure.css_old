/* MENU */
#testata { border-bottom: 4px solid #036; height: 70px;}
.buttonList { 
font: bold 13px arial;
text-align :right;
line-height:24px;
margin:0 ;
padding: 0   ;
}
.buttonList li {
position: relative;
padding: 0 ;
list-style: none;
display: inline;
}
.buttonList li a img { position : absolute ; top : -12px; left: 2px ;}
.buttonList li a {
padding: 3px 0.5em 0 40px;
text-decoration: none;
background-color: #FFF2BF;
border: 2px solid #FFF2BF;
color: black;
}
.buttonList li a:hover {
color: black;
background-color: #FFE271;
border-style: outset;
}
.buttonList li.hi{ 
border-style: inset;
}
html>body .buttonList li a:active{ /* Apply mousedown effect only to NON IE browsers */
border-style: inset;
}


A.stallo  { display: block ; padding: 10px 8px ; }
A.stallo:hover { background-color : #F5F5B3; text-decoration:none; padding: 8px 4px ;  border: 2px outset #B3B5F5}
TD.stallo { border: 1px solid #B3B5F5; }
