#corpo {
	margin : 0;
}

#testata { margin:0;padding:2% 0 0 1em; height:8%; font-size: 2em;}
#container { position: relative;  margin: 0 ; padding:0; height:80%; width:100%;}
#spallaSx { width : 15em ; position : absolute; left:0; top:0 ; height: 100%; overflow:hidden;}
#spallaSx P {padding:2px;margin:0;}
#spallaSx H3 { line-height: 1.2em; color:#B49C45; font-size:1.2em; margin:0; padding: 0 0 6px 1em; background: url(images/rigasfumata.gif) bottom left repeat-x ;}
#spallaSx UL { margin : 0; padding : 0 0 10px 1.1em;}
#spallaSx UL LI { list-style-type : none; margin:0;padding: 0; color:#45B49C; cursor:pointer;}
#spallaSx UL LI.active { border: 1px dashed #F60; background-color:#F9FEE1;}
#spallaSx A { padding: 1px; color:#B49C45; font-weight: bold;text-decoration:none;}
#spallaSx A:hover {text-decoration:underline;}
#googlemap { position: relative; width:100%; height:90%; border: 1px solid; margin:0 ; padding: 0;}


